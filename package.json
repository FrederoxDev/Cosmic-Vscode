{
	"name": "cc-cosmic",
	"description": "Live server for Cosmic",
	"author": "FrederoxDev",
	"license": "MIT",
	"version": "1.5.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/FrederoxDev/Cosmic-Vscode"
	},
	"publisher": "frederoxDev",
	"categories": [],
	"keywords": [
		"cosmic"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"icon": "./icons/cosmic.png",
	"activationEvents": [
		"onLanguage:cosmic"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "cosmic",
				"aliases": [
					"Cosmic"
				],
				"extensions": [
					".cos"
				],
				"icon": {
					"light": "./icons/cosmic.png",
					"dark": "./icons/cosmic.png"
				}
			}
		],
		"grammars": [
			{
				"language": "cosmic",
				"scopeName": "source.cos",
				"path": "./syntaxes/cos.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"update": "vsce publish minor",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"mocha": "^9.2.1",
		"typescript": "^4.9.5"
	}
}
